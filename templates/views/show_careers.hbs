    let logo = document.getElementById('logo');
    logo.addEventListener('click', function () {
        window.location.href = "home_page"
    })

    let career_data = JSON.parse(localStorage.getItem("career_data"));
    console.log(career_data);

    let career_details = document.getElementById('career_details');

    let div = document.createElement("div");

    let h1 = document.createElement("h1");
    h1.innerText = career_data.name;
    h1.setAttribute('id', 'heading')

    let img = document.createElement("img");
    img.src = career_data.photoUrl;
    img.setAttribute('id', 'pic')

    let p = document.createElement("p");
    p.innerText = career_data.description;
    p.setAttribute('id', 'details')

    let rate = document.createElement('h3');
    rate.setAttribute("id", "amount")
    rate.innerText = "Course Value â‚¹ " + career_data.price + " " + "INR";

    let btn = document.createElement("button");
    btn.textContent = "BUY COURSE";
    btn.setAttribute("id", "btn");
    btn.style.backgroundColor = "#1E88E5";
    btn.addEventListener('click', function () {
        window.location.href = "payment"
    });

    div.append(h1, img, rate, p, btn);

    career_details.append(div)
    localStorage.getItem("price", JSON.stringify(Number(rate)));

